{
    "_comment" : "proxy listen addr",
    "addr" : "127.0.0.1:4000",

    "_comment" : "proxy user and password",
    "user": "qing",
    "password": "admin",

    "_comment" : "node represent real remote mysql instance",
    "_comment" : "dsn:<username>:<password>@<host>:<port>/<database>",
    "_comment": "we use first dsn as main node, other are backups ",
    "_comment": "if main node crashed, switch to backup",

    "nodes" : [
        {
            "name" : "node1",
            "mode" : "master",

            "_comment": "switch another db after N seconds when current's noalive",
            "switch_after_noalive": 300,

            "_comment" : "backends represent real mysql instance",
            "backends" : [
                {
                    "addr" : "127.0.0.1:3306",
                    "user" : "qing",
                    "password": "admin",
                    "db" : "mixer",
                    "idle_conns" : 16
                },
                {
                    "addr" : "127.0.0.1:3306",
                    "user" : "qing",
                    "password": "admin",
                    "db" : "mixer",
                    "idle_conns" : 16
                }
            ]
        },
        {
            "name" : "node2",
            "mode" : "slave",
            "switch_after_noalive": 30,

            "backends" : [
                {
                    "addr" : "127.0.0.1:3306",
                    "user" : "qing",
                    "password": "admin",
                    "db" : "mixer",
                    "idle_conns" : 16
                },
                {
                    "addr" : "127.0.0.1:3306",
                    "user" : "qing",
                    "password": "admin",
                    "db" : "mixer",
                    "idle_conns" : 16
                }
            ]
        }
    ],

    "_comment" : "schemas supply an unity entrance for client use",
    "schemas" : [
        {
            "db" : "mixer",
            "nodes" : ["node1", "node2"]
        }
    ],

    "_comment" : "end"
}
